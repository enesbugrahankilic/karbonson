// firebase/storage.rules
// Firebase Storage Security Rules - Basit ve etkili kurallar

rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // === PROFILE IMAGES ===
    match /profile_images/{userId}/{imageId} {
      
      // Herkes profil fotoğraflarını görebilir
      allow read: if true;
      
      // Sadece kullanıcı kendi fotoğrafını yükleyebilir
      allow write: if request.auth != null && 
                    request.auth.uid == userId &&
                    request.resource.contentType.matches('image/.*') &&
                    request.resource.size < 10 * 1024 * 1024; // 10MB max
    }
    
    // === DEFAULT AVATARS (READ ONLY) ===
    match /assets/avatars/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // === DENY ALL OTHER ACCESS ===
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}


# platform minimumunu projenize göre yükseltebilirsiniz (ör. '12.0' veya '13.0')
platform :ios, '15.0'

ENV['COCOAPODS_DISABLE_STATS'] = 'true'

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

# Try to use FLUTTER_ROOT environment variable first (set by flutter tool),
# otherwise fall back to a relative path. This is more robust across setups.
flutter_root = ENV['FLUTTER_ROOT']
if flutter_root.nil? || flutter_root.empty?
  begin
    flutter_bin = `which flutter`.strip
    flutter_root = File.expand_path(File.join(flutter_bin, '..', '..'))
  rescue StandardError => e
    raise "Failed to find Flutter SDK: #{e}"
  end
end

podhelper = File.join(flutter_root, 'packages', 'flutter_tools', 'bin', 'podhelper.rb')
unless File.exist?(podhelper)
  raise "Could not find Flutter podhelper at #{podhelper}"
end
load podhelper

target 'Runner' do
  use_frameworks!
  use_modular_headers!

  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.0'
      config.build_settings['EXCLUDED_ARCHS[sdk=iphonesimulator*]'] = ''
    end
  end
end
